@model OtoServisYonetimSistemi.Entities.Web.Blog

@{
    ViewBag.Title = "Blog Silme İşlemleri";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>Bu Bloğu silmek istiyor musunuz?</h3>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            Blog Başlığı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Baslik)
        </dd>

        <dt>
            Blog İçeriği
        </dt>

        <dd>
            @Html.Raw(Model.Icerik)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tarih)
        </dt>

        <dd>
            @Model.Tarih.ToShortDateString()
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-light" })
        </div>
    }
</div>
